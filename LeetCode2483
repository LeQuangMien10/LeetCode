class Solution:
    def bestClosingTime(self, customers: str) -> int:
        array = [1 if c == 'Y' else 0 for c in customers]
        penalty = sum(array)
        min_hour = 0
        min_penalty = penalty

        for i in range(0, len(array)):
            array[i] = 1 - array[i]
            if array[i] == 0:
                penalty -= 1
                if penalty < min_penalty:
                    min_penalty = penalty
                    min_hour = i + 1
            else:
                penalty += 1
        
        return min_hour
